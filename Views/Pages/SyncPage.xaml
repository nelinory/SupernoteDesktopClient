<ui:UiPage x:Class="SupernoteDesktopClient.Views.Pages.SyncPage"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:converters="clr-namespace:SupernoteDesktopClient.Converters"
           xmlns:local="clr-namespace:SupernoteDesktopClient.Views.Pages"
           xmlns:models="clr-namespace:SupernoteDesktopClient.Models"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
           d:DataContext="{d:DesignInstance local:SyncPage,
                                     IsDesignTimeCreatable=False}"
           d:DesignHeight="450"
           d:DesignWidth="800"
           d:Background="{DynamicResource ApplicationBackgroundBrush}"
           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
           mc:Ignorable="d">

    <ui:UiPage.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:BoolToVisibilityInversionConverter x:Key="BoolToVisibilityInversionConverter" />
    </ui:UiPage.Resources>

    <Grid Margin="56,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ui:CardControl Grid.Row="0"
                        VerticalAlignment="Stretch"
                        Icon="DocumentSync24">
            <ui:CardControl.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel VerticalAlignment="Center"
                                Grid.Column="0">
                        <TextBlock Grid.Column="0"
                                   FontSize="14"
                                   FontWeight="Medium"
                                   Text="Source folder" />
                        <TextBlock Grid.Column="0"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                   Text="Supernote source folder" />
                        <TextBlock Grid.Column="0"
                                   Margin="0, 12, 0, 0"
                                   FontSize="14"
                                   FontWeight="Medium"
                                   Text="Backup folder" />
                        <TextBlock Grid.Column="0"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                   Text="Local backup folder" />
                    </StackPanel>
                    <StackPanel VerticalAlignment="Top"
                                Grid.Column="1">
                        <ui:TextBox Grid.Column="1"
                                    Margin="10, 0, 0, 0"
                                    IsReadOnly="True"
                                    ClearButtonEnabled="False"
                                    Text="{Binding ViewModel.SourceFolder, Mode=OneWay}" />
                        <ui:TextBox Grid.Column="1"
                                    Margin="10, 12, 0, 0"
                                    IsReadOnly="True"
                                    ClearButtonEnabled="False"
                                    Text="{Binding ViewModel.BackupFolder, Mode=OneWay}" />
                    </StackPanel>
                </Grid>
            </ui:CardControl.Header>
            <Grid Width="120px">
                <ui:Button Icon="ArrowSync24"
                           Content="Synchronize"
                           IsEnabled="{Binding ViewModel.IsSyncButtonEnabled}"
                           Command="{Binding ViewModel.ExecuteSyncCommand, Mode=OneWay}"
                           Visibility="{Binding ViewModel.IsSyncRunning, Converter={StaticResource BoolToVisibilityInversionConverter}}" />
                <ui:ProgressRing Visibility="{Binding ViewModel.IsSyncRunning, Converter={StaticResource BoolToVisibilityConverter}}"
                                 IsIndeterminate="True"
                                 HorizontalAlignment="Center" />
            </Grid>
        </ui:CardControl>

        <ui:CardControl Grid.Row="1"
                        Margin="0,12,0,0"
                        VerticalAlignment="Stretch"
                        Icon="Archive24">
            <ui:CardControl.Header>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock FontSize="14"
                               FontWeight="Medium"
                               Text="{Binding ViewModel.LastBackupDateTime, Mode=OneWay}" />
                    <TextBlock FontSize="12"
                               Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                               Text="Last device backup" />
                </StackPanel>
            </ui:CardControl.Header>
        </ui:CardControl>

        <ui:Card Grid.Row="2"
                 VerticalAlignment="Top"
                 Margin="0,12,0,12"
                 Visibility="{Binding ViewModel.ArchivesVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel HorizontalAlignment="Left">
                    <TextBlock Grid.Column="0"
                               Margin="38, 0, 0, 0"
                               FontSize="14"
                               FontWeight="Medium"
                               Text="Archives" />
                    <TextBlock Grid.Column="0"
                               Margin="38, 0, 0, 0"
                               FontSize="12"
                               Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                               Text="Previous backups" />
                </StackPanel>
                <ScrollViewer Grid.Column="1"
                              CanContentScroll="True"
                              VerticalScrollBarVisibility="Auto">
                    <ListView ItemsSource="{Binding ViewModel.ArchiveFiles, Mode=OneWay}"
                              Margin="40, -5, 0, 0"
                              IsEnabled="False">
                        <ListView.Template>
                            <ControlTemplate TargetType="ListBox">
                                <Border BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderBrush}">
                                    <ItemsPresenter />
                                </Border>
                            </ControlTemplate>
                        </ListView.Template>
                        <ListView.ItemTemplate>
                            <DataTemplate DataType="models:File">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="20" />
                                        <RowDefinition Height="20" />
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0"
                                               Grid.Column="0"
                                               HorizontalAlignment="Left"
                                               FontSize="14"
                                               FontWeight="Medium"
                                               TextWrapping="WrapWithOverflow"
                                               Text="{Binding Name}" />
                                    <TextBlock Grid.Row="1"
                                               Grid.Column="0"
                                               HorizontalAlignment="Left"
                                               FontSize="12"
                                               Text="{Binding CreateDateTime}" />
                                    <TextBlock Grid.Row="0"
                                               Grid.Column="1"
                                               HorizontalAlignment="Right"
                                               FontSize="14"
                                               Text="{Binding SizeAsString}" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>
            </Grid>
        </ui:Card>
    </Grid>
</ui:UiPage>
